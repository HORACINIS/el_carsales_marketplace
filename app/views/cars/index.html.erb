<h1>Listing all second hand cars</h1>

<div class="card-group">
    <% @cars.each do |car| %>

        <div class="card">

            <%# Here goes the image in rails format - image via id for each car %>
            <img src="..." class="card-img-top" alt="...">

            <div class="card-body">
                <h5 class="card-title">$<%= car.price.to_i %></h5>
                <h5 class="card-title"><%= car.make %></h5>
                <p class="card-text"><%= car.model %></p>
                <p class="card-text"><%= car.year%></p>
            </div>

            <div class="btn-group" role="group" aria-label="Basic example">
                <%= button_to "See", cars_path, class:"btn btn-primary" %>
                <% if user_signed_in?%>
                    <%= button_to "Buy Me!", cars_path, class:"btn btn-success"%>
                <% end %>
            </div>

        </div>

    <% end %>
</div>
